  <!-- Script to automatically update and display last modified date (meets automatic update requirement).
       Uses document.lastModified if available; falls back to current date/time.
  -->
  <script>
    (function(){
      function formatDate(d){
        // e.g. October 5, 2025 at 11:23 AM
        var opts = { year: 'numeric', month: 'long', day: 'numeric' };
        var datePart = d.toLocaleDateString(undefined, opts);
        var timePart = d.toLocaleTimeString([], {hour: 'numeric', minute:'2-digit'});
        return datePart + ' at ' + timePart;
      }

      var lmElem = document.getElementById('lm-value');
      var lastModified = document.lastModified;

      if(lastModified && lastModified.trim() !== "") {
        // document.lastModified often contains "MM/DD/YYYY HH:MM:SS" or locale variant
        var parsed = new Date(lastModified);
        if(!isNaN(parsed)) {
          lmElem.textContent = formatDate(parsed);
        } else {
          // if parsing fails, show the raw string
          lmElem.textContent = lastModified;
        }
      } else {
        // fallback: use current date/time so it's always accurate without manual edits
        lmElem.textContent = formatDate(new Date());
      }

      // Accessibility: ensure mailto links are announced
      var mailLinks = document.querySelectorAll('a[href^="mailto:"]');
      mailLinks.forEach(function(a){ a.setAttribute('aria-label', 'Email Khaana'); });

    })();
  </script>
